{
  "manifest_version": 2,
  "name": "Floatly",
  "version": "3.0.0",
  "description": "Floatly is an awesome floating button that brings quick actions to any website.",
  "permissions": ["tabs", "clipboardWrite","storage","activeTab","http://*/","https://*/","bookmarks"],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "options_page": "./options.html",

  "content_scripts": [{
    "matches": [
      "<all_urls>"
    ],
    "js": ["js/content.js"]
  }],
  "browser_action": {
    "default_icon": "assets/png/icon256.png"
  },
  "icons": { 
    "20": "assets/png/icon20.png",
    "48": "assets/png/icon48.png",
    "152": "assets/png/icon152.png" 
  }
}